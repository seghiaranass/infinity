<odoo>
    <data>
        <record id="view_account_move_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/> 
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='payment_state']" position="after"> 
                    <filter string="Lettrage Date" name="filter_lettrage_date" domain="[]" />
                    <field name="lettrage_date" filter_domain="[('lettrage_date', '=', self)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
