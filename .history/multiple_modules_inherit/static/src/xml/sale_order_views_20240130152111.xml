<?xml version="1.0" encoding="utf-8"?>
<template>
    <t
    t-name="rowno_in_tree.PurchaseListRenderer"
    t-inherit="purchase.PurchaseListView"
    t-inherit-mode="extension"
    owl="1"
>
<xpath expr="//table/thead/tr/th[@t-if='hasSelectors']" position="before">
    <th style="width:100px; max-width:100px" class="row_no">#</th>
</xpath>
<xpath expr="//div/table/tfoot/tr/td" position="before">
    <td/>
</xpath>
</t>

    
    
    
    
    <t
    t-name="rowno_in_tree.ListRenderer"
    t-inherit="account.ListRenderer"
    t-inherit-mode="extension"
    owl="1"

>
    <xpath expr="//table/thead/tr/th[@t-if='hasSelectors']" position="before">
        <th  style="width:100px !important; max-width:100px !important;" class="row_no">#</th>
    </xpath>

</t>
    <t
    t-name="rowno_in_tree.ListRenderer"
    t-inherit="web.ListRenderer"
    t-inherit-mode="extension"
    owl="1"

>
    <xpath expr="//table/thead/tr/th[@t-if='hasSelectors']" position="before">
        <th class="row_no">#</th>
    </xpath>

</t>



    <t t-name="row_column_number.ListRenderer" t-inherit="account.sectionAndNoteListRenderer" t-inherit-mode="extension" owl="1">
        <xpath expr="//table/thead/tr/th[1]" position="before">
            <th class="row_no">#</th>
        </xpath>
    </t>
    <!-- <t t-name="row_column_number.ListRenderer" t-inherit="account.accountDropZone" t-inherit-mode="extension" owl="1">
        <xpath expr="//table/thead/tr/th[1]" position="before">
            <th class="row_no">#</th>
        </xpath>
    </t> -->


    <t t-name="row_column_number.add_number" t-inherit="web.ListRenderer.Rows" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-foreach='list.records']" position="before">
            <t t-set="RowNumber" t-value="1" />
        </xpath>
        <!-- increament number but ignore line sections -->
        <xpath expr="//t[@t-call='{{ constructor.recordRowTemplate }}']" position="after">
            <t t-if="!record.data.display_type or (record.data.display_type !== 'line_section' and record.data.display_type !== 'line_note')">
                <t t-set="RowNumber" t-value="RowNumber+1" />
            </t>            
        </xpath>
    </t>

    <t t-name="row_column_number.sectionAndNoteListRenderer.RecordRowNumber" t-inherit="web.ListRenderer.RecordRow" t-inherit-mode="extension" owl="1">
        <xpath expr="//td[@class='o_list_record_selector']" position="before">
            <!-- Only show row number if it's not a section -->
            <t t-if="!record.data.display_type or (record.data.display_type !== 'line_section' and record.data.display_type !== 'line_note')">
                <td tabindex="-1">
                    <span t-esc="RowNumber" />
                </td>
            </t>
            <!-- Anass fix devis colspan here -->
            <!-- because of line_section colspan ,if you remove this code it make colspan not for all line -->
            <t t-if="record.data.display_type or (record.data.display_type === 'line_section' and record.data.display_type === 'line_note')">
                <td tabindex="-1">
                    <span><span>
                </td>
            </t>
        </xpath>
    </t>
</template>
