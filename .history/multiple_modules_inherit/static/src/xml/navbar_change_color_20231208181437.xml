<!-- Odoo 16 -->
<data t-name="Helloo" inherit_id="web.layout">
  <xpath expr="//body" position="inside">
    <t t-if="request.httprequest.cookies.get('cids') and request.httprequest.cookies.get('cids')[0] == '1'">
      <style>.o_main_navbar {background: linear-gradient(45deg, #57596F, #57596F); 
                                         background-color: #57596F!important;border-bottom: 0px;}</style></t> 
    <t t-if="request.httprequest.cookies.get('cids') and request.httprequest.cookies.get('cids')[0] == '5'">
      <style>.o_main_navbar {background: linear-gradient(45deg, #6B3C3C, #6B3C3C); 
                                         background-color: #6B3C3C!important;border-bottom: 0px;}</style></t>
    <t t-if="request.httprequest.cookies.get('cids') and request.httprequest.cookies.get('cids')[0] == '6'">
      <style>.o_main_navbar {background: linear-gradient(45deg, #87AFC4, #87AFC4); 
                                         background-color: #87AFC4!important;border-bottom: 0px;}</style></t>
    <t t-if="request.httprequest.cookies.get('cids') and request.httprequest.cookies.get('cids')[0] == '7'">
      <style>.o_main_navbar {background: linear-gradient(45deg, #77B691, #77B691); 
                                         background-color: #77B691!important;border-bottom: 0px;}</style></t>
   </xpath>
</data>